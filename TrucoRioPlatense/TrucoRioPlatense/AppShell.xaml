<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TrucoRioPlatense.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:TrucoRioPlatense.Pages"
    xmlns:MenuPages="clr-namespace:TrucoRioPlatense.Pages.MainMenuPages"
    Shell.FlyoutBehavior="Flyout"
    Title="Truco Rio Platense">



    <TabBar >
        <Tab Title="Jugar" Icon="icon_jugar.png">
            <ShellContent ContentTemplate="{DataTemplate MenuPages:NewPage1}" />
        </Tab>
        <Tab Title="Menu" Icon="icon_menu.png">
            <ShellContent
            ContentTemplate="{DataTemplate pages:MainMenuPage}"
            Route="MainMenu" />
        </Tab>
        <Tab Title="Personalización" Icon="icon_personalizacion.png">
            <ShellContent ContentTemplate="{DataTemplate MenuPages:NewPage1}" />
        </Tab>
    </TabBar>
    <MenuItem Text="Cerrar sesión" Clicked="SignOut_Clicked"/>


</Shell>
