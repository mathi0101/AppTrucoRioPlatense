<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TrucoRioPlatense.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:TrucoRioPlatense.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Truco Rio Platense">

    <ShellContent
    ContentTemplate="{DataTemplate pages:LoadingPage}"
    Route="LoadingPage" />

    <ShellContent
    Title="Login"
    ContentTemplate="{DataTemplate pages:LoginViewPage}"
    Route="LoginPage" />

    <ShellContent
    Title="Register"
    ContentTemplate="{DataTemplate pages:RegisterViewPage}"
    Route="RegisterPage" />

    <ShellContent
    Title="Main"
    ContentTemplate="{DataTemplate pages:MainPage}"
    Route="MainPage" />

</Shell>
