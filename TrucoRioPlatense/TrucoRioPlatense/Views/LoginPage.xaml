<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrucoRioPlatense.Views.LoginPage">
    <StackLayout Padding="30">
        <Label Text="Truco Rio Platense" FontSize="32" HorizontalOptions="Center" />

        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />

        <Button Text="Login" Clicked="OnLoginClicked" />
        

        <Label Text="¿Quieres jugar sin registrarte?" HorizontalOptions="Center" />
        <Button Text="Iniciar sesión como anónimo" Clicked="OnLoginAnonymouslyClicked" />

        <Label Text="O inicia sesión con:" HorizontalOptions="Center" />

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="Google" Clicked="OnLoginWithGoogleClicked" />
            <Button Text="Apple" Clicked="OnLoginWithAppleClicked" />
        </StackLayout>
    </StackLayout>
</ContentPage>
