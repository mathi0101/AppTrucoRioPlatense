<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrucoRioPlatense.Pages.LoadingPage"
             BackgroundColor="DarkSlateGrey">
    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" >
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <ActivityIndicator IsRunning="True" />
            <Label Text="Cargando..." HorizontalOptions="Center" VerticalOptions="Center" />
        </StackLayout>
        <Label Text= "{Binding VersionNumber}" HorizontalOptions="Start" VerticalOptions="End" Margin="15,0,0,15" TextColor="DarkGrey" />
    </Grid>
</ContentPage>